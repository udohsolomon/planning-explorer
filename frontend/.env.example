# Planning Explorer - Environment Variables
# Copy this file to .env.local and update values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ANIMATION=true
NEXT_PUBLIC_ENABLE_PROGRESS_UPDATES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_FAST_ACCELERATION=true

# Authentication (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Performance
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
